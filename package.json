{
  "name": "auwsomebridge",
  "version": "0.0.10",
  "private": false,
  "type": "module",
  "description": "Unified, runtime-agnostic API bridge for Express and Hono with validation and hooks",
  "keywords": [
    "api",
    "bridge",
    "express",
    "hono",
    "hooks",
    "zod",
    "bun",
    "runtime-agnostic"
  ],
  "engines": {
    "node": ">=18",
    "bun": ">=1.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/snrraptopack/auwsomebridge.git"
  },
  "bugs": {
    "url": "https://github.com/snrraptopack/auwsomebridge/issues"
  },
  "homepage": "https://github.com/snrraptopack/auwsomebridge#readme",
  "author": "auwsomebridge team",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "server": "bun run server/app-hono.ts",
    "server:express": "bun run server/app.ts",
    "server:hono": "bun run server/app-hono.ts",
    "api:gen": "bun run scripts/generate-api.ts",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "lint": "eslint server --ext .ts --max-warnings=0",
    "format": "prettier --write ."
  },
  "main": "./dist/bridge.js",
  "types": "./dist/bridge.d.ts",
  "dependencies": {
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "typescript": "latest",
    "@types/bun": "latest",
    "eslint": "^9.14.0",
    "@typescript-eslint/parser": "^8.12.1",
    "@typescript-eslint/eslint-plugin": "^8.12.1",
    "prettier": "^3.3.3",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "express": "^4.21.2",
    "@types/express": "^4.17.21",
    "hono": "^4.10.5"
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/bridge.d.ts",
      "import": "./dist/bridge.js"
    }
  }
}
